<div class = "row accent">
	<% if video.name.length < 20 %>
		<div class = "col-sm-4"><%= link_to video.name, video %></div>
	<% else %>
		<div class="col-sm-4"><%= link_to video.abbreviated_name, video %></div>
	<% end %>
	<div class = "col-sm-3"><%= video.category %></div>
	<div class = "col-sm-5"><%=video.core_muscles_worked %></div>
</div>
