
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">Workouts</div>
    </div>
</nav>

<div class ="container">
	<div class ="row">
		<div class='col-sm-12'>
            <p class='pull-right'>
                <a href='#' id='show-form' class='btn btn-info'>Add a Workout</a>
            </p>
        </div>
    </div>

  <hr>

    <div class='col-sm-12 workout-form'>
        <p>
            <%= form_for(Workout.new, remote: true,
                       html: { class: 'horizontal-form' }) do |f| %>
              <legend>New Workout</legend>

                <div class='col-sm-5'>
                    <div class="form-group">
                        <%= f.label :date_completed %><br />
                        <%= f.date_select :date_completed %>
                     </div>
                    <div class='form-group'>
                      <%= f.label :name %><br />
    				  <%= f.collection_select :video_id, Video.all, :id, :name %>
                    </div>
                    <div class='form-group'>
                      <%= f.text_field :time, class: 'form-control', placeholder: 'Time' %>
                    </div>
                    <div class='form-group'>
                      <%= f.submit class: 'btn btn-primary' %>
                    </div>
                </div>
            <% end %>
        </p>
  </div>
	<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-9 blue"><h3>Workouts - Last Two Weeks</h3></div>
  </div>
  <div class="row">	
		<div class="col-sm-2"></div>
		<div class="col-sm-9 boxed">
				<div class="row header">
					<div class="col-sm-4">date completed</div>
					<div class="col-sm-5">Name</div>
					<div class="col-sm-3">Time</div>
				</div>
				<div class="workout-list">
					<%= render @workouts %>
				</div>
				<div class = "row highlight">
						<div class="col-sm-4"></div>
						<div class="col-sm-5">Total:</div>
						<div class="col-sm-3"><%= @totals %> minutes</div>
				</div>
		</div>
		<div class="col-sm-1"></div>

	</div>	
	</br>	
<div class ="container">  
  <div class="row">
    <div class ="col-sm-5 pull-right">
       <button type="button" class="btn btn-default"><%= link_to 'Video List', videos_path %></button>
      <button type="button" class="btn btn-default"><%= link_to 'Workout Charts',charts_workouts_path %></button>
    </div>
  </div>
</div>


