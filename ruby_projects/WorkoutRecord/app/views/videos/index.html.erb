<div class ="container">	
	<div class="row">
    	<div class="col-sm-2"></div>
   		<div class="col-sm-9 blue"><h3>Workout Videos</h3></div>
  	</div>
	<div class="row">
		<div class ="col-sm-2">
				<button type="button" class="btn btn-primary"><%= link_to 'New Video', new_video_path %></button>
				</br>
				</br>
				<button type="button" class="btn btn-primary"><%= link_to 'Workout Record', workouts_path %></button>
				</br>
				</br>
				<button type="button" class="btn btn-primary"><%= link_to 'Muscles Worked Chart', charts_videos_path %></button>
		</div>
		<div class = "col-sm-7 boxed">
			<div class="row header">
				<div class ="col-sm-3">Video</div>
				<div class="col-sm-3">Category</div>
				<div class="col-sm-4">Core Muscles Worked</div>
				<div class="col-sm-2">Length</div>
			</div>
			<div id="videos">
				<%= render @videos %>
			</div>
		</div>
		<div class="col-sm-2">
            <div class="row">
                <div class="col-sm-12">
                  <strong>Filter by Length</strong>
                  <% @video_length_ranges.each do |length| %>
	                    <li>
	                      <%= link_to "over #{length} minutes", videos_path(long_length_filter: length), class: 'label label-primary' %>
	                    </li>
	                     <li>
	                      <%= link_to "under #{length} minutes", videos_path(short_length_filter: length), class: 'label label-primary' %>
	                    </li>
                  <% end %>
                  		<li>
							<%= link_to "All", videos_path, class: 'label label-primary' %>
						</li>
				</div>
            </div>
        </div>
	</div>
</div>